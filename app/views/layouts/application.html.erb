<!DOCTYPE html>
<html>
<head>
  <title>FourSlides</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if controller.action_name != "preview" %>
    <div class="navigation-bar">
      <div class="navigation-bar-content clearfix">
        <%= link_to "FOURSLIDES", root_path , class: "service-title" %>
        <ul class="navigation-bar-items-ul">
          <% if user_signed_in? %>
            <li><%= link_to "#{current_user.username}", user_path(current_user.username) %></li>
            <li><%= link_to "+NEW SLIDE", new_slide_path %></li>
          <% else %>
            <li><%= link_to 'SIGN IN', new_user_session_path %></li>
            <li><%= link_to "+NEW SLIDE", new_slide_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if controller.action_name != "preview" %>
    <div class="yield-content">
      <%= yield %>
    </div>
  <% else %>
    <%= yield %>
  <% end %>

</body>
</html>
